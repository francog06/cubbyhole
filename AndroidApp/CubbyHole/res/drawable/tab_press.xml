<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:left="@dimen/tab_space" android:right="@dimen/tab_space"> 
		<shape android:shape="rectangle">
			<gradient android:angle="-90" android:startColor="@color/tabMedium"
				android:endColor="@color/tabDark" />
		</shape>
	</item>
	<!-- draw tab background -->
	<item android:top="1sp" android:bottom="30sp">
		<shape android:shape="rectangle">
			<solid android:color="@color/tabTransparent" />
		</shape>
	</item>
	<item android:left="1sp" android:top="1sp"
                android:right="1sp" android:bottom="1sp"> 
		<shape android:shape="rectangle">
			<gradient android:angle="-90" android:startColor="@color/bleucieldark"
				android:endColor="@color/bleucieldark" />
		</shape>
	</item>
</layer-list>