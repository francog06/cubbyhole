<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- draw tab background -->
	<item android:left="@dimen/tab_space" android:right="@dimen/tab_space">
		<shape android:shape="rectangle">
			<gradient android:angle="-90" android:startColor="@color/tabMedium"
				android:endColor="@color/tabDark" />
		</shape>
	</item>
	<item android:top="4sp" android:bottom="50sp" >
		<shape android:shape="rectangle">
			<solid android:color="@color/tabTransparent" />
		</shape>
	</item>
	<item android:left="0sp" android:top="0sp" android:right="0sp"
		android:bottom="0sp">
		<shape android:shape="rectangle">
			<gradient android:angle="-90" android:endColor="@color/bleucieldark"
			    android:startColor="@color/bleucieldark" />
		</shape>
	</item>

</layer-list>