      {
         "name":"Fichiers",
         "methods":[
            {
               "MethodName":"Récupération des détails d'un fichier",
               "Synopsis":"",
               "HTTPMethod":"GET",
               "URI":"/file/details/:fileId",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"fileId",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"Identifiant unique du fichier (e.g. 42)"
                  }
               ]
            },
            {
               "MethodName":"Téléchargement d'un fichier avec quotat",
               "Synopsis":"Cette méthode requiert votre ApiKey si il vous est partagé ou un accessKey si il est publique. Lance le téléchargement.",
               "HTTPMethod":"GET",
               "URI":"/file/download/:fileId",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"fileId",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"Identifiant unique du fichier (e.g. 42)"
                  },
                  {
                     "Name":"accessKey",
                     "Required":"N",
                     "Default":"",
                     "Location": "path",
                     "Type":"string",
                     "Description":"Clé d'accès au fichier fournis lors d'un partage publique"
                  }
               ]
            },
            {
               "MethodName":"Téléchargement d'un fichier sans quotat",
               "Synopsis":"Permet le téléchargement du fichier sans créer de quotat (utilisé pour la synchronisation des clients mobiles & desktop).",
               "HTTPMethod":"GET",
               "URI":"/file/synchronize/:fileId",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"fileId",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"Identifiant unique du fichier (e.g. 42)"
                  },
                  {
                     "Name":"hash",
                     "Required":"N",
                     "Default":"",
                     "Location": "path",
                     "Type":"string",
                     "Description":"Clé d'accès au fichier fournis lors d'un partage publique"
                  }
               ]
            },
            {
               "MethodName":"Preview du fichier",
               "Synopsis":"Renvoit une preview du fichier si ce dernier est une image. Ne requiert pas d'ApiKey",
               "HTTPMethod":"GET",
               "URI":"/file/details/:fileId/preview",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"fileId",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"Identifiant unique du fichier (e.g. 42)"
                  },
                  {
                     "Name":"hash",
                     "Required":"Y",
                     "Default":"", // ab14d0415c485464a187d5a9c97cc27c,
                     "Type":"path",
                     "Description":"Hash d'accès à la preview"
                  }
               ]
            },
            {
               "MethodName":"Thumbnail du fichier",
