               "HTTPMethod":"GET",
               "URI":"/file/details/:fileId/thumbnail",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"fileId",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"Identifiant unique du fichier (e.g. 42)"
                  }
               ]
            },
