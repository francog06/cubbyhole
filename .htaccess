<IfModule mod_rewrite.c> 
    RewriteEngine On
    RewriteBase /
    RewriteCond $1 !^(index\.php|assets|images|robots\.txt)
    RewriteRule ^(.*)$ /index.php/$1 [L]
</IfModule>
 
<IfModule !mod_rewrite.c>
 
    # Without mod_rewrite, route 404's to the front controller
    ErrorDocument 404 /index.php
 
</IfModule>

